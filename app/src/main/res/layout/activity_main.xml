<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yurima.weightloser.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btn_food_activity"
            android:text="FOOD"
            android:background="@drawable/food"
            style="@style/MainActivityButtonStyle"
            />

        <Button
            android:id="@+id/btn_graph_activity"
            style="@style/MainActivityButtonStyle"
            android:background="@drawable/graph"
            android:text="GRAPH" />

        <Button
            android:id="@+id/btn_weight_activity"
            style="@style/MainActivityButtonStyle"
            android:background="@drawable/weight"
            android:text="WEIGHT" />
    </LinearLayout>

</LinearLayout>
